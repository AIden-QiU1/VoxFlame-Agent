{
  "type": "extension",
  "name": "glm_llm_python",
  "version": "1.0.0",
  "language": "python",
  "dependencies": [
    {
      "type": "system",
      "name": "ten_runtime_python",
      "version": "0.4"
    }
  ],
  "api": {
    "property": {
      "api_key": {
        "type": "string"
      },
      "model": {
        "type": "string",
        "default": "glm-4"
      },
      "temperature": {
        "type": "float64",
        "default": 0.7
      },
      "max_tokens": {
        "type": "int32",
        "default": 500
      },
      "system_prompt": {
        "type": "string",
        "default": ""
      },
      "enable_tools": {
        "type": "bool",
        "default": true
      },
      "streaming": {
        "type": "bool",
        "default": true
      }
    },
    "data_in": [
      {
        "name": "text_data",
        "property": {
          "text": {"type": "string"},
          "is_final": {"type": "bool"},
          "confidence": {"type": "float64"},
          "stream_id": {"type": "uint32"}
        }
      }
    ],
    "data_out": [
      {
        "name": "text_data",
        "property": {
          "text": {"type": "string"},
          "is_final": {"type": "bool"},
          "end_of_segment": {"type": "bool"},
          "stream_id": {"type": "uint32"}
        }
      }
    ],
    "cmd_in": [
      {
        "name": "flush"
      },
      {
        "name": "interrupt"
      }
    ]
  }
}
