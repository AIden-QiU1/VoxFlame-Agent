# ============================================
# VoxFlame-Agent 统一环境配置文件
# ============================================

# DashScope API (阿里云大模型平台)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# Supabase 配置
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# 数据库配置 (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Frontend 配置
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Backend 配置
PORT=3001
BACKEND_PORT=3001
NODE_ENV=production

# TEN Agent 配置
TEN_AGENT_PORT=8766
TEN_AGENT_URL=ws://localhost:8766

# OpenAI 配置 (如果使用 OpenAI LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Mem0 配置 (如果使用 Mem0 记忆系统)
MEM0_API_KEY=your_mem0_api_key_here

# Qdrant 配置 (如果使用 Qdrant 向量数据库)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# Docker 网络配置
COMPOSE_PROJECT_NAME=voxflame
